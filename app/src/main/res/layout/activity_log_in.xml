<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6200EA"
    android:onClick="rootLayoutTapped">


    <Button
        android:id="@+id/btnSignUpLA"
        android:layout_width="268dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/round_corner_signup"
        android:text="Sign Up"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLogInLA" />

    <Button
        android:id="@+id/btnLogInLA"
        android:layout_width="268dp"
        android:layout_height="0dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/round_corner_login"
        android:text="Log In"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtPasswordLA" />

    <ImageView
        android:id="@+id/twitterImage2"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/twitter"
        app:layout_constraintBottom_toTopOf="@+id/edtUsernameLA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtUsernameLA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"
        android:backgroundTint="#FAFFFFFF"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#3C69E2"
        android:textColorHint="#AEFFFFFF"
        android:textColorLink="#380B75"
        app:layout_constraintBottom_toTopOf="@+id/edtPasswordLA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/twitterImage2" />

    <EditText
        android:id="@+id/edtPasswordLA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp"
        android:backgroundTint="#FAFFFFFF"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#3C69E2"
        android:textColorHint="#AEFFFFFF"
        android:textColorLink="#380B75"
        app:layout_constraintBottom_toTopOf="@+id/btnLogInLA"
        app:layout_constraintStart_toStartOf="@+id/edtUsernameLA"
        app:layout_constraintTop_toBottomOf="@+id/edtUsernameLA" />
</androidx.constraintlayout.widget.ConstraintLayout>